[Unit]
Description=Auto-update Claude Code CLI daily
Documentation=https://github.com/anthropics/claude-code

[Timer]
# Run 5 minutes after boot (if system was down during scheduled time)
OnBootSec=5min

# Run daily (every 24 hours after last activation)
OnUnitActiveSec=1d

# Run at 2 AM daily (fixed schedule)
OnCalendar=*-*-* 02:00:00

# If system was powered off, run on next boot
Persistent=true

[Install]
WantedBy=timers.target
